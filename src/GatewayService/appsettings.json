{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ClientApp": "http://localhost:3000",
  "AdminApp": "http://localhost:4200",
  "AdminToken": "changeme-admin-token",
  "ReverseProxy": {
    "Routes": {
      "auctionsRead" : {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "PathPattern": "api/auctions/{**catch-all}"
          }
        ]
      },
      "auctionsWrite" : {
        "ClusterId": "auctions",
        "AuthorizationPolicy": "proxy-auth",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods": ["POST", "PUT", "DELETE"]
        },
        "Transforms": [
          {
            "PathPattern": "api/auctions/{**catch-all}"
          }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "PathPattern": "api/search/{**catch-all}"
          }
        ]
      },
      "bidsWrite": {
        "ClusterId": "bids",
        "AuthorizationPolicy": "proxy-auth",
        "Match": {
          "Path": "/bids",
          "Methods": ["POST"]
        },
        "Transforms": [
          {
            "PathPattern": "api/bids"
          }
        ]
      },
      "bidsRead": {
        "ClusterId": "bids",
        "Match": {
          "Path": "/bids/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "PathPattern": "api/bids/{**catch-all}"
          }
        ]
      },
      "progress": {
        "ClusterId": "bids",
        "Match": {
          "Path": "/progress/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/progress/{**catch-all}"
          }
        ]
      },
      "admin-auctions" : {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/admin/auctions/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/admin/auctions/{**catch-all}"
          }
        ]
      },
      "admin-progress" : {
        "ClusterId": "bids",
        "Match": {
          "Path": "/admin/progress/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/admin/progress/{**catch-all}"
          }
        ]
      },
      "admin-bots" : {
        "ClusterId": "bots",
        "Match": {
          "Path": "/admin/bots/{**catch-all}"
        }
      },
      "admin-search" : {
        "ClusterId": "search",
        "Match": {
          "Path": "/admin/search/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/admin/search/{**catch-all}"
          }
        ]
      },
      "notifications": {
        "ClusterId": "notifications",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auctions": {
        "Destinations": {
          "auctionApi": {
            "Address": "http://auction-clusterip"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://search-clusterip"
          }
        }
      },
      "bids": {
        "Destinations": {
          "bidApi": {
            "Address": "http://bid-clusterip"
          }
        }
      },
      "bots": {
        "Destinations": {
          "botApi": {
            "Address": "http://bot-admin:8000"
          }
        }
      },
      "notifications": {
        "Destinations": {
          "notifyApi": {
            "Address": "http://notify-clusterip"
          }
        }
      }
    }
  }
}
